<div class="container mt-4">
  <div class="row">
    <div class="col-md">
      <h1>Daftar Mahasiswa</h1>
      <a href="mahasiswa/add" class="btn btn-primary mt-2 mb-2">Create Data</a>
      <% if(msg.length !== 0) { %>
          <div class="alert alert-success" role="alert"><i class="bi bi-check"></i> <%= msg %></div>
      <% } %>
      
      <table class="table table-dark table-striped mt-2">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Nama</th>
          <th scope="col">Email</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% let id = 1; %>
        <% mahasiswa.forEach(mhs => { %>
        <tr>
          <th scope="row"><%= id++ %></th>
          <td><%= mhs.nama %></td>
          <td><%= mhs.email %></td>
          <td>
            <a href="/mahasiswa/<%= mhs.id %>" class="btn btn-info"><i class="bi bi-info-circle"></i> Detail</a>
          </td>
        </tr>
        <% }) %>
      </tbody>
      </table>
      
    </div>
  </div>
</div>