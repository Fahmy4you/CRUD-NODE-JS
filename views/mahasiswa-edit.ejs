<div class="container mt-3">
  <div class="row">
    <div class="col-md-10">
      <h2>Form Edit Data Mahasiswa</h2>
      
    <% if(typeof errors != 'undefined') { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <ul>
              <% errors.forEach(err => { %>
                <i class="bi bi-x"></i> <%= err.msg %><br>
              <% }); %>
            </ul>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    
     <div class="mt-2 bg-primary border border-dark border-1 p-3 rounded text-white">
       <% mahasiswaById.forEach((mahasiswa, i) => { %>
        <form method="post" action="/mahasiswa/edit">
          <input type="hidden" value="<%= mahasiswa.id %>" name="id">
          <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="nama" autocomplete="off" autofocus value="<%= mahasiswa.nama %>">
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" autocomplete="off" value="<%= mahasiswa.email %>">
          </div>
          <a href="/mahasiswa" class="btn btn-warning">&laquo; Back</a>
          <button type="submit" class="btn btn-info">Edit</button>
        </form>
        <% }) %>
      </div>
    </div>
  </div>
</div>      